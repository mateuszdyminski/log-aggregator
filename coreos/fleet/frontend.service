[Unit]
Description=Log-aggregator frontend service
After=docker.service

[Service]
Restart=always
RestartSec=10s
ExecStartPre=-/usr/bin/docker ps -a -q | xargs docker rm
ExecStartPre=/usr/bin/docker pull quay.io/mateuszdyminski/frontend
ExecStart=/usr/bin/docker run --rm -p 9001:9001 --name frontend mateuszdyminski/frontend
ExecStop=/usr/bin/docker stop frontend
